---
import Nav from "../components/Nav.astro";
const { title, subtitle } = Astro.props;
import "../styles/global.css";
import WitnessField from "../components/WitnessField.jsx";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <style>
      :root {
        --bg: #05060a;
        --panel: #111827;
        --accent: #fbbf24;
        --accent-soft: #fef3c7;
        --text-main: #e5e7eb;
        --text-muted: #9ca3af;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        min-height: 100vh;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI",
          sans-serif;
        background: radial-gradient(circle at top, #111827 0, #020617 55%);
        color: var(--text-main);
        display: flex;
        justify-content: center;
        padding: 2rem 1rem;
      }

      .shell {
        width: 100%;
        max-width: 960px;
        background: linear-gradient(to bottom right, #020617, #111827);
        border-radius: 18px;
        border: 1px solid rgba(148, 163, 184, 0.3);
        box-shadow:
          0 18px 45px rgba(0, 0, 0, 0.75),
          0 0 0 1px rgba(15, 23, 42, 0.8);
        padding: 1.75rem 2rem 1.5rem;
      }

      header {
        border-bottom: 1px solid rgba(148, 163, 184, 0.3);
        padding-bottom: 1rem;
        margin-bottom: 1.25rem;
      }

      .brand {
        font-size: 0.8rem;
        letter-spacing: 0.18em;
        text-transform: uppercase;
        color: var(--accent-soft);
      }

      .title-row {
        display: flex;
        flex-wrap: wrap;
        align-items: baseline;
        justify-content: space-between;
        gap: 0.75rem;
        margin-top: 0.25rem;
      }

      h1 {
        font-size: 1.6rem;
        margin: 0;
      }

      .subtitle {
        font-size: 0.95rem;
        color: var(--text-muted);
        max-width: 24rem;
      }

      nav {
        margin-top: 0.9rem;
        font-size: 0.9rem;
      }

      nav a {
        margin-right: 1.1rem;
        text-decoration: none;
        color: var(--accent-soft);
        opacity: 0.8;
      }

      nav a:hover {
        opacity: 1;
        text-decoration: underline;
      }

      main {
        margin-top: 0.75rem;
        font-size: 0.98rem;
        line-height: 1.6;
      }

      code {
        font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
          "Liberation Mono", "Courier New", monospace;
        font-size: 0.88rem;
        background: rgba(15, 23, 42, 0.7);
        padding: 0.1rem 0.35rem;
        border-radius: 999px;
        color: var(--accent-soft);
      }

      footer {
        margin-top: 1.5rem;
        font-size: 0.78rem;
        color: var(--text-muted);
        border-top: 1px dashed rgba(148, 163, 184, 0.35);
        padding-top: 0.75rem;
        display: flex;
        justify-content: space-between;
        gap: 0.75rem;
      }

      @media (max-width: 640px) {
        .shell {
          padding: 1.25rem 1.25rem 1rem;
        }

        h1 {
          font-size: 1.35rem;
        }
      }
    </style>
  </head>
  <body>
    <div class="shell">
      <header>
        <div class="brand">Counter Culture Cat · Witness Lab</div>
        <div class="title-row">
          <h1>{title}</h1>
          {subtitle && <p class="subtitle">{subtitle}</p>}
        </div>
        <Nav />
      </header>

      
    <section class="witness-section">
    <WitnessField client:load canvasHeight={260} particleCount={80} />

    <div class="witness-inner">
      <h2>Witness in the Machine</h2>
      <p>
        Living truth in a system of illusion. This field behind the words is a small
        visual reminder: even in the dark, there is structure, motion, and signal.
      </p>
    </div>
   </section>
       <main>
      <slot />
      </main>

      <footer>
        <span>Reasoned risk in public view.</span>
        <span>© {new Date().getFullYear()} CCC / Witness in the Machine</span>
      </footer>
    </div>

  </body>
</html>
